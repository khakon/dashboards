@model String

@*<link rel="stylesheet" href="~/css/products.css" />*@
<link href="~/Areas/Dashboards/css/products.css" rel="stylesheet" />
<div class="big-content right-padding">
    <div class="products-bottom page">
        <div class="hb-4">
            <div class="lb-4 nopadding">
                <div class="doughnut-content dashboard-bottom performance-title">
                    <div class="performance-text">
                        Просрочка<br />(%)
                    </div>
                </div>
                <div id="pie-@Model"></div>
            </div>

            <div class="lb-6">
                <div class="year-container">
                    <div class="year" id="year">@DateTime.Now.Year</div>
                    <div class="performance-title">Просрочка (суммы)</div>
                </div>
                <div class="chart" id="chart-@Model"></div>
            </div>
        </div>
    </div>
</div>
<div class="range-content">
    <div class="page">
        <div class="hb-2">
            <div class="lft-arrow" id="prevYear"></div>
            <div id="rangeSelector">
            </div>
            <div class="rght-arrow disabled" id="nextYear"></div>
        </div>
    </div>
</div>
